{
    "name": "QNX 8 SDK DevContainer",
    "build": {
        "dockerfile": "Dockerfile.shell",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "qnx.qnx-vscode",
                "twxs.cmake",
                "ms-vscode.hexeditor",
                "wayou.vscode-todo-highlight",
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools",
                "theqtcompany.qt",
                "theqtcompany.qt-core",
                "theqtcompany.qt-cpp",
                "theqtcompany.qt-qml",
                "theqtcompany.qt-ui"
            ]
        },
        "settings": {
            "terminal.integrated.shell.linux": "/bin/bash"
        }
    },
    "mounts": [
        "source=${localEnv:HOME}/.local/sdks/qnx-800-raspberrypi4b/,target=/opt/qnx-sdk,type=bind"
    ],
    "overrideCommand": false,
	"privileged": true,
    "postCreateCommand": "bash -c 'source /opt/qnx-sdk/qnxsdp-env.sh'",
    "runArgs": [
        "--privileged",
        "--net=host",
        "--volume=/sys/fs/cgroup:/sys/fs/cgroup:ro"
    ]
}
